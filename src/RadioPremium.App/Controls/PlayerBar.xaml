<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="RadioPremium.App.Controls.PlayerBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:RadioPremium.App.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
        <converters:PlaybackStateToIconConverter x:Key="PlaybackStateToIconConverter" />
        <converters:FavoriteToIconConverter x:Key="FavoriteToIconConverter" />
    </UserControl.Resources>

    <Border 
        Background="White"
        Padding="24,16">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Now Playing Info -->
            <StackPanel 
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="16"
                VerticalAlignment="Center">
                
                <!-- Station Logo -->
                <Border 
                    Width="56"
                    Height="56"
                    CornerRadius="12"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    Visibility="{x:Bind ViewModel.CurrentStation, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid>
                        <Image 
                            x:Name="StationLogo"
                            Stretch="UniformToFill" />
                        <FontIcon 
                            Glyph="&#xE95A;"
                            FontSize="24"
                            Foreground="{StaticResource TextTertiaryBrush}" />
                    </Grid>
                </Border>

                <!-- Station Info -->
                <StackPanel 
                    VerticalAlignment="Center"
                    Spacing="2"
                    Visibility="{x:Bind ViewModel.CurrentStation, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock 
                        x:Name="StationName"
                        Text="{x:Bind ViewModel.CurrentStation.Name, Mode=OneWay}"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        TextTrimming="CharacterEllipsis"
                        MaxWidth="250" />
                    <TextBlock 
                        x:Name="StationCountry"
                        Text="{x:Bind ViewModel.CurrentStation.Country, Mode=OneWay}"
                        FontSize="14"
                        Foreground="{StaticResource TextSecondaryBrush}" />
                </StackPanel>

                <!-- No Station -->
                <TextBlock 
                    Text="Selecciona una emisora para empezar"
                    FontSize="15"
                    Foreground="{StaticResource TextTertiaryBrush}"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ViewModel.CurrentStation, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}" />
            </StackPanel>

            <!-- Playback Controls -->
            <StackPanel 
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="12"
                VerticalAlignment="Center">

                <!-- Play/Pause Button -->
                <Button 
                    Click="PlayPause_Click"
                    Width="56"
                    Height="56"
                    CornerRadius="28"
                    Background="{StaticResource AppleBlueBrush}"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Reproducir/Pausar">
                    <FontIcon 
                        Glyph="{x:Bind ViewModel.PlaybackState, Mode=OneWay, Converter={StaticResource PlaybackStateToIconConverter}}"
                        FontSize="22"
                        Foreground="White" />
                </Button>

                <!-- Stop Button -->
                <Button 
                    Click="Stop_Click"
                    Style="{StaticResource AppleIconButtonStyle}"
                    ToolTipService.ToolTip="Detener"
                    IsEnabled="{x:Bind ViewModel.CurrentStation, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                    <FontIcon Glyph="&#xE71A;" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" />
                </Button>

                <!-- Identify Button -->
                <Button 
                    x:Name="IdentifyButton"
                    Click="Identify_Click"
                    Style="{StaticResource ApplePillButtonStyle}"
                    ToolTipService.ToolTip="Identificar canciÃ³n (Ctrl+I)"
                    Margin="8,0,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8D6;" FontSize="16" />
                        <TextBlock Text="Identificar" FontWeight="SemiBold" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Volume Controls -->
            <StackPanel 
                Grid.Column="2"
                Orientation="Horizontal"
                Spacing="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                <!-- Favorite Button -->
                <Button 
                    Click="Favorite_Click"
                    Style="{StaticResource AppleIconButtonStyle}"
                    ToolTipService.ToolTip="Favorito"
                    IsEnabled="{x:Bind ViewModel.CurrentStation, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                    <FontIcon 
                        Glyph="{x:Bind ViewModel.IsCurrentStationFavorite, Mode=OneWay, Converter={StaticResource FavoriteToIconConverter}}"
                        FontSize="20"
                        Foreground="{StaticResource ApplePurpleBrush}" />
                </Button>

                <!-- Mute Button -->
                <Button 
                    Click="Mute_Click"
                    Style="{StaticResource AppleIconButtonStyle}"
                    ToolTipService.ToolTip="Silenciar">
                    <FontIcon 
                        x:Name="VolumeIcon"
                        Glyph="&#xE767;"
                        FontSize="18"
                        Foreground="{StaticResource TextSecondaryBrush}" />
                </Button>

                <!-- Volume Slider -->
                <Slider 
                    x:Name="VolumeSlider"
                    Width="120"
                    Minimum="0"
                    Maximum="1"
                    StepFrequency="0.01"
                    Value="{x:Bind ViewModel.Volume, Mode=TwoWay}"
                    ValueChanged="VolumeSlider_ValueChanged" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

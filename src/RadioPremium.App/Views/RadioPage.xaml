                                <Border Height="14" CornerRadius="4" Background="{StaticResource SkeletonBaseBrush}" />
                                <Border Height="10" Width="80" CornerRadius="4" Background="{StaticResource SkeletonBaseBrush}" HorizontalAlignment="Left" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Skeleton Card 8 -->
                    <Border Grid.Column="3" Grid.Row="1" Background="White" CornerRadius="12" Margin="8,8,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="120" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="{StaticResource SkeletonBaseBrush}">
                                <Ellipse Width="48" Height="48" Fill="{StaticResource SkeletonHighlightBrush}" />
                            </Border>
                            <StackPanel Grid.Row="1" Padding="10,10,10,12" Spacing="8">
                                <Border Height="14" CornerRadius="4" Background="{StaticResource SkeletonBaseBrush}" />
                                <Border Height="10" Width="80" CornerRadius="4" Background="{StaticResource SkeletonBaseBrush}" HorizontalAlignment="Left" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Stations Grid -->
                <ItemsRepeater 
                    x:Name="StationsRepeater"
                    ItemsSource="{x:Bind ViewModel.Stations}"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                    Margin="0,8,0,24">
                    
                    <ItemsRepeater.Layout>
                        <UniformGridLayout 
                            MinItemWidth="150"
                            MinItemHeight="175"
                            MinRowSpacing="16"
                            MinColumnSpacing="16"
                            ItemsStretch="Fill" />
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <!-- Station Card - Redesigned -->
                            <Border 
                                x:Name="StationCardRoot"
                                Background="White"
                                CornerRadius="12"
                                BorderBrush="{StaticResource AppleRedBrush}"
                                BorderThickness="{Binding IsPlaying, Converter={StaticResource PlayingToBorderThicknessConverter}}"
                                PointerEntered="StationCard_PointerEntered"
                                PointerExited="StationCard_PointerExited"
                                PointerPressed="StationCard_PointerPressed"
                                Padding="0">
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Image Area -->
                                    <Border 
                                        Grid.Row="0"
                                        CornerRadius="12,12,0,0"
                                        Background="{StaticResource BackgroundTertiaryBrush}">
                                        <Grid>
                                            <!-- Station Logo (when available) -->
                                            <Image 
                                                Source="{Binding Favicon}"
                                                Stretch="UniformToFill"
                                                Visibility="{Binding Favicon, Converter={StaticResource EmptyStringToVisibilityConverter}, ConverterParameter=Invert}" />
                                            
                                            <!-- Placeholder with Initials (when no logo) -->
                                            <Border 
                                                Visibility="{Binding Favicon, Converter={StaticResource EmptyStringToVisibilityConverter}}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="64"
                                                Height="64"
                                                CornerRadius="32"
                                                Background="{Binding Name, Converter={StaticResource StringToColorBrushConverter}}">
                                                <TextBlock 
                                                    Text="{Binding Initials}"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                            </Border>

                                            <!-- Favorite Heart (top right) -->
                                            <Border 
                                                Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,8,8,0"
                                                Width="24"
                                                Height="24"
                                                CornerRadius="12"
                                                Background="#80FFFFFF">
                                                <FontIcon 
                                                    Glyph="&#xEB52;"
                                                    FontSize="12"
                                                    Foreground="{StaticResource AppleRedBrush}" />
                                            </Border>

                                            <!-- Now Playing Indicator (top left) -->
                                            <Border 
                                                Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVisibilityConverter}}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Margin="8,8,0,0"
                                                Padding="6,3"
                                                CornerRadius="4"
                                                Background="{StaticResource AppleRedBrush}">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon 
                                                        Glyph="&#xE995;"
                                                        FontSize="10"
                                                        Foreground="White" />
                                                    <TextBlock 
                                                        Text="EN VIVO"
                                                        FontSize="9"
                                                        FontWeight="SemiBold"
                                                        Foreground="White" />
                                                </StackPanel>
                                            </Border>

                                            <!-- Play Button (hover state) -->
                                            <Border 
                                                x:Name="PlayButtonOverlay"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,8,8"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="20"
                                                Background="{StaticResource AppleRedBrush}"
                                                Opacity="0">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <FontIcon 
                                                    Glyph="&#xE768;"
                                                    FontSize="16"
                                                    Foreground="White" />
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Station Info -->
                                    <StackPanel 
                                        Grid.Row="1" 
                                        Padding="10,10,10,12"
                                        Spacing="2">
                                        
                                        <!-- Station Name with Playing Dot -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Playing Dot -->
                                            <Ellipse 
                                                Grid.Column="0"
                                                Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Width="6"
                                                Height="6"
                                                Fill="{StaticResource AppleRedBrush}"
                                                Margin="0,0,6,0"
                                                VerticalAlignment="Center" />
                                            
                                            <TextBlock 
                                                Grid.Column="1"
                                                Text="{Binding Name}"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                TextTrimming="CharacterEllipsis"
                                                MaxLines="2"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                        
                                        <!-- Metadata: Country Â· Genre -->
                                        <TextBlock 
                                            Text="{Binding FormattedMetadata}"
                                            FontSize="11"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!-- Empty State -->
                <StackPanel 
                    x:Name="EmptyState"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ViewModel.Stations.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Invert}"
                    Margin="0,32,0,0">
                    <Border
                        Width="72"
                        Height="72"
                        CornerRadius="36"
                        Background="{StaticResource BackgroundTertiaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                        <FontIcon 
                            Glyph="&#xE95A;"
                            FontSize="28"
                            Foreground="{StaticResource TextTertiaryBrush}" />
                    </Border>
                    <TextBlock 
                        Text="Sin emisoras"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        HorizontalAlignment="Center" />
                    <TextBlock 
                        Text="Busca o selecciona una categorÃ­a para comenzar"
                        Style="{StaticResource AppleCaptionStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- SEARCH OVERLAY (Spotlight Style) -->
        <Grid 
            x:Name="SearchOverlay"
            Grid.RowSpan="2"
            Visibility="Collapsed"
            Background="#80000000"
            Tapped="SearchOverlay_Tapped">
            
            <Border 
                x:Name="SearchPanel"
                Background="White"
                CornerRadius="12"
                Width="520"
                MaxHeight="500"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,80,0,0"
                Tapped="SearchPanel_Tapped">
                
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Search Input -->
                    <Border 
                        Grid.Row="0"
                        BorderBrush="#E5E5E5"
                        BorderThickness="0,0,0,1"
                        Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Icon / Loading -->
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <FontIcon 
                                    x:Name="SearchIcon"
                                    Glyph="&#xE721;"
                                    FontSize="18"
                                    Foreground="{StaticResource TextSecondaryBrush}" />
                                <ProgressRing 
                                    x:Name="SearchSpinner"
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource AppleRedBrush}"
                                    Visibility="Collapsed" />
                            </Grid>
                            
                            <TextBox 
                                x:Name="SearchBox"
                                Grid.Column="1"
                                PlaceholderText="Buscar emisoras, paÃ­ses o gÃ©neros..."
                                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextChanged="SearchBox_TextChanged"
                                KeyDown="SearchBox_KeyDown"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                VerticalAlignment="Center" />
                            
                            <!-- Close Button -->
                            <Button 
                                Grid.Column="2"
                                Click="CloseSearch_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="8"
                                CornerRadius="6">
                                <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Results / Suggestions -->
                    <ScrollViewer 
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        MaxHeight="400">
                        <StackPanel Padding="8">
                            
                            <!-- Quick Filters -->
                            <StackPanel 
                                x:Name="QuickFiltersPanel"
                                Margin="8,8,8,16">
                                <TextBlock 
                                    Text="EXPLORAR"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextTertiaryBrush}"
                                    Margin="0,0,0,10" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button 
                                        Content="ðŸ”¥ Populares"
                                        Click="QuickFilter_Popular"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="ðŸ†• Nuevas"
                                        Click="QuickFilter_New"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                    <Button 
                                        Content="ðŸ‡ªðŸ‡¸ EspaÃ±a"
                                        Click="QuickFilter_Spain"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="ðŸ‡ºðŸ‡¸ USA"
                                        Click="QuickFilter_USA"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="ðŸ‡¬ðŸ‡§ UK"
                                        Click="QuickFilter_UK"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                    <Button 
                                        Content="Pop"
                                        Tag="pop"
                                        Click="QuickFilter_Genre"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="Rock"
                                        Tag="rock"
                                        Click="QuickFilter_Genre"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="Jazz"
                                        Tag="jazz"
                                        Click="QuickFilter_Genre"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                    <Button 
                                        Content="Chill"
                                        Tag="chill"
                                        Click="QuickFilter_Genre"
                                        Style="{StaticResource ApplePillButtonStyle}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Search Results List -->
                            <StackPanel x:Name="SearchResultsPanel" Visibility="Collapsed">
                                <TextBlock 
                                    x:Name="ResultsCountText"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextTertiaryBrush}"
                                    Margin="8,0,8,8" />
                                
                                <ItemsRepeater 
                                    x:Name="SearchResultsRepeater"
                                    ItemsSource="{x:Bind ViewModel.Stations}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Spacing="0" />
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate>
                                            <Button 
                                                Click="SearchResult_Click"
                                                Tag="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Stretch"
                                                Padding="8,6"
                                                CornerRadius="6">
                                                <Grid Height="36">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Station Icon -->
                                                    <Border 
                                                        Grid.Column="0"
                                                        Width="32"
                                                        Height="32"
                                                        CornerRadius="6"
                                                        Background="{StaticResource BackgroundTertiaryBrush}"
                                                        Margin="0,0,10,0">
                                                        <Grid>
                                                            <Image 
                                                                Source="{Binding Favicon}"
                                                                Stretch="UniformToFill" />
                                                            <FontIcon 
                                                                Glyph="&#xE95A;"
                                                                FontSize="14"
                                                                Foreground="{StaticResource TextTertiaryBrush}" />
                                                        </Grid>
                                                    </Border>
                                                    
                                                    <!-- Station Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="0">
                                                        <TextBlock 
                                                            Text="{Binding Name}"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            Foreground="{StaticResource TextPrimaryBrush}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1" />
                                                        <TextBlock 
                                                            Text="{Binding FormattedMetadata}"
                                                            FontSize="11"
                                                            Foreground="{StaticResource TextSecondaryBrush}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1" />
                                                    </StackPanel>
                                                    
                                                    <!-- Play Icon -->
                                                    <Border
                                                        Grid.Column="2"
                                                        Width="28"
                                                        Height="28"
                                                        CornerRadius="14"
                                                        Background="Transparent"
                                                        VerticalAlignment="Center">
                                                        <FontIcon 
                                                            Glyph="&#xE768;"
                                                            FontSize="12"
                                                            Foreground="{StaticResource AppleRedBrush}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </Border>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>

                            <!-- No Results -->
                            <StackPanel 
                                x:Name="NoResultsPanel"
                                Visibility="Collapsed"
                                HorizontalAlignment="Center"
                                Margin="0,32,0,32">
                                <TextBlock 
                                    Text="ðŸ˜”"
                                    FontSize="32"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,12" />
                                <TextBlock 
                                    x:Name="NoResultsText"
                                    FontSize="14"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer with Keyboard Shortcuts -->
                    <Border 
                        Grid.Row="2"
                        BorderBrush="#E5E5E5"
                        BorderThickness="0,1,0,0"
                        Padding="16,10"
                        Background="{StaticResource BackgroundTertiaryBrush}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Border Background="#E0E0E0" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="â†‘â†“" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Medium" />
                                </Border>
                                <TextBlock Text="navegar" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Border Background="#E0E0E0" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="â†µ" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Medium" />
                                </Border>
                                <TextBlock Text="reproducir" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Border Background="#E0E0E0" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="esc" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Medium" />
                                </Border>
                                <TextBlock Text="cerrar" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

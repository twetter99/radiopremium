<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RadioPremium.App.Views.IdentifiedTracksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:RadioPremium.App.Converters"
    Background="{StaticResource BackgroundSecondaryBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border
            Grid.Row="0"
            Background="{StaticResource BackgroundSecondaryBrush}"
            Padding="24,40,24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        Text="Canciones identificadas"
                        Style="{StaticResource AppleLargeTitleStyle}" />
                    <TextBlock
                        Text="{x:Bind ViewModel.Tracks.Count, Mode=OneWay}"
                        FontSize="13"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Margin="0,4,0,0">
                        <Run Text="{x:Bind ViewModel.Tracks.Count, Mode=OneWay}" />
                        <Run Text=" canciones" />
                    </TextBlock>
                </StackPanel>

                <!-- Clear All Button -->
                <Button
                    Grid.Column="1"
                    Click="ClearAll_Click"
                    Background="Transparent"
                    BorderBrush="{StaticResource AppleRedBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16,8"
                    VerticalAlignment="Bottom"
                    Visibility="{x:Bind ViewModel.HasTracks, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            Glyph="&#xE74D;"
                            FontSize="14"
                            Foreground="{StaticResource AppleRedBrush}" />
                        <TextBlock
                            Text="Limpiar todo"
                            FontSize="13"
                            Foreground="{StaticResource AppleRedBrush}" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border
            Grid.Row="1"
            Background="{StaticResource BackgroundSecondaryBrush}"
            Padding="24,8,24,16"
            Visibility="{x:Bind ViewModel.HasTracks, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border
                    Background="{StaticResource BackgroundTertiaryBrush}"
                    CornerRadius="8"
                    Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Glyph="&#xE721;"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Margin="0,0,8,0" />

                        <TextBox
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Buscar por título, artista, álbum o emisora..."
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer
            Grid.Row="2"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="24,8,24,24">

                <!-- Loading -->
                <ProgressRing
                    IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                    Width="48"
                    Height="48"
                    Foreground="{StaticResource SpotifyGreenBrush}"
                    HorizontalAlignment="Center"
                    Margin="0,32,0,0" />

                <!-- Tracks List -->
                <ItemsRepeater
                    ItemsSource="{x:Bind ViewModel.Tracks}"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">

                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="12" />
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <!-- Track Card -->
                            <Border
                                Background="{StaticResource CardBackgroundBrush}"
                                CornerRadius="12"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="64" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Artwork -->
                                    <Border
                                        Grid.Column="0"
                                        Width="64"
                                        Height="64"
                                        CornerRadius="8"
                                        Background="{StaticResource BackgroundTertiaryBrush}">
                                        <Grid>
                                            <Image
                                                Source="{Binding Track.ArtworkUrl}"
                                                Stretch="UniformToFill"
                                                Visibility="{Binding Track.ArtworkUrl, Converter={StaticResource EmptyStringToVisibilityConverter}, ConverterParameter=Invert}" />
                                            <FontIcon
                                                Glyph="&#xE8D6;"
                                                FontSize="28"
                                                Foreground="{StaticResource TextTertiaryBrush}"
                                                Visibility="{Binding Track.ArtworkUrl, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                        </Grid>
                                    </Border>

                                    <!-- Track Info -->
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="16,0,16,0"
                                        VerticalAlignment="Center"
                                        Spacing="4">

                                        <!-- Title & Artist -->
                                        <TextBlock
                                            Text="{Binding Track.Title}"
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource TextPrimaryBrush}"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1" />

                                        <TextBlock
                                            Text="{Binding Track.Artist}"
                                            FontSize="13"
                                            Foreground="{StaticResource SpotifyGreenBrush}"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1" />

                                        <!-- Album -->
                                        <TextBlock
                                            Text="{Binding Track.Album}"
                                            FontSize="12"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1"
                                            Visibility="{Binding Track.Album, Converter={StaticResource EmptyStringToVisibilityConverter}, ConverterParameter=Invert}" />

                                        <!-- Station & Time -->
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                            <Border
                                                Background="{StaticResource BackgroundHighlightBrush}"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                Visibility="{Binding StationName, Converter={StaticResource EmptyStringToVisibilityConverter}, ConverterParameter=Invert}">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon
                                                        Glyph="&#xE95A;"
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextSecondaryBrush}" />
                                                    <TextBlock
                                                        Text="{Binding StationInfo}"
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextSecondaryBrush}" />
                                                </StackPanel>
                                            </Border>

                                            <TextBlock
                                                Text="{Binding RelativeTime}"
                                                FontSize="11"
                                                Foreground="{StaticResource TextTertiaryBrush}"
                                                VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">

                                        <!-- Copy Button -->
                                        <Button
                                            Click="CopyToClipboard_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource AppleIconButtonStyle}"
                                            ToolTipService.ToolTip="Copiar al portapapeles">
                                            <FontIcon
                                                Glyph="&#xE8C8;"
                                                FontSize="16"
                                                Foreground="{StaticResource TextSecondaryBrush}" />
                                        </Button>

                                        <!-- Spotify Button -->
                                        <Button
                                            Click="OpenInSpotify_Click"
                                            Tag="{Binding}"
                                            Background="{StaticResource SpotifyGreenBrush}"
                                            CornerRadius="8"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="Buscar en Spotify">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon
                                                    Glyph="&#xE8D6;"
                                                    FontSize="14"
                                                    Foreground="Black" />
                                                <TextBlock
                                                    Text="Spotify"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Foreground="Black" />
                                            </StackPanel>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button
                                            Click="RemoveTrack_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource AppleIconButtonStyle}"
                                            ToolTipService.ToolTip="Eliminar">
                                            <FontIcon
                                                Glyph="&#xE74D;"
                                                FontSize="16"
                                                Foreground="{StaticResource AppleRedBrush}" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!-- Empty State -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,64,0,0"
                    Spacing="16">

                    <Border
                        Width="96"
                        Height="96"
                        CornerRadius="48"
                        Background="{StaticResource BackgroundTertiaryBrush}"
                        HorizontalAlignment="Center">
                        <FontIcon
                            Glyph="&#xE8D6;"
                            FontSize="40"
                            Foreground="{StaticResource TextTertiaryBrush}" />
                    </Border>

                    <TextBlock
                        Text="No hay canciones identificadas"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        HorizontalAlignment="Center" />

                    <TextBlock
                        FontSize="13"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        MaxWidth="300"
                        TextWrapping="Wrap">
                        <Run Text="Usa el botón " />
                        <Run Text="Identificar" FontWeight="SemiBold" Foreground="{StaticResource SpotifyGreenBrush}" />
                        <Run Text=" en el reproductor para reconocer canciones mientras escuchas la radio" />
                    </TextBlock>

                    <Border
                        Background="{StaticResource BackgroundHighlightBrush}"
                        CornerRadius="8"
                        Padding="12,8"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                Text="Atajo:"
                                FontSize="12"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                VerticalAlignment="Center" />
                            <Border
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="4"
                                Padding="8,4">
                                <TextBlock
                                    Text="Ctrl + I"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}" />
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
